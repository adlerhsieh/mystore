<h2>新使用者</h2>

<hr/>

<%= form_for @user do |a| %>
	<% if @user.errors.any? %>
    	<div class="error_messages">
    		<ul>
    			<h3><%= @user.errors.count %>項錯誤</h3>
        <% for message in @user.errors.full_messages %>
          	<li><%= message %></li>
        <% end %>
    <% end %>
	<table>
		<tbody>
			<tr>
				<td>使用者名稱</td>
				<td><%= a.text_field :name %></td>
			</tr>
			<tr>
				<td>email</td>
				<td><%= a.text_field :email %></td>
			</tr>
			<tr>
				<td>密碼</td>
				<td><%= a.password_field :password_input %></td>
			</tr>
			<tr>
				<td>密碼確認</td>
				<td><%= a.password_field :password_input_confirmation %></td>
			</tr>

		</tbody>
	</table>
	<p></p>
	<%= a.submit "確認送出" %>  <%= link_to "取消", root_url %>
<% end %>