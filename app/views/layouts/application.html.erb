<!DOCTYPE html>
<html>
<head>
  <title>Mystore</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-default navbar-fixed-top" role="navigation">
	<div class="navbar-header">
		<%= link_to "我的商店", products_path, :class => "navbar-brand" %>
	</div>
	<div class="navbar-form navbar-right">
<% if current_user %>
	<%= current_user.email %>&nbsp;<%= link_to "登出", sign_out_path, :method => :delete, :class => "btn btn-default", :style => "margin-right: 10px;" %>&nbsp;
<% end %>
	<%= link_to "Dashboard", admin_products_path, :class => "btn btn-default" %>&nbsp;
		
	</div>
</div>
<div class="container">
	<%= yield %>
</div>
</body>
</html>
