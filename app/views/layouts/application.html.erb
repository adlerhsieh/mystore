<!DOCTYPE html>
<html>
<head>
  <title>Mystore</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-default navbar-fixed-top" role="navigation">
	<div class="navbar-header">
		<%= link_to "我的商店", products_path, :class => "navbar-brand" %>
	</div>
	<div class="navbar-form navbar-right">
<% if !current_user %>
	<%= render_cart_url %>&nbsp;<%= link_to "登入", sign_in_path, :class => "btn btn-default" %>&nbsp;<%= link_to "註冊", sign_up_path, :class => "btn btn-default", :style => "margin-right: 10px;" %>
<% else %>
	<%= current_user.email %>&nbsp;<%= link_to "登出", sign_out_path, :method => :delete, :class => "btn btn-default", :style => "margin-right: 10px;" %></p>
<% end %>
		
	</div>
</div>

<%= yield %>

</body>
</html>
